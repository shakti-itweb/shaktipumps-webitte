<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shakti Pumps</title>
    <link rel="icon" type="image/x-icon" href="/img/fav.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css"
    />
    <link rel="stylesheet" href="/css/style-loading.css" />
    <link rel="stylesheet" href="/css/responsive.css" />
  </head>
  <body>
    <%- include('../common/header.ejs') %>

    <section class="newsfilter">
      <div class="container">
        <div class="row" style="justify-content: left">
          <div class="col-lg-8 col-md-8 col-sm-12" >
            <h2>
              Shakti Pumps Events
              <span
                >Total events: <%= Array.isArray(allEvents) ? allEvents.length :
                0 %></span
              >
            </h2>
          </div>
          <!-- <div class="col-lg-4 col-md-4 col-sm-12 newfilrgt">
            <select>
              <option>Select Category</option>
            </select>
            <input type="date" value="DD.MM.YYYY" />
          </div> -->
        </div>
      </div>
    </section>
    <section class="newslist">
      <div class="container">
        <div class="row">
          <% if(Array.isArray(allEvents) && allEvents.length > 0){ %> <%
          allEvents.map((event)=>{ %>
          <div class="col-lg-6 col-md-6 col-sm-12">
            <div class="row newslistpan">
              <div class="col-lg-4 col-md-4 col-sm-12 newslithum">
                <img src="<%=event.image_path%><%=event.cover_image%>" alt="" />
              </div>
              <div class="col-lg-8 col-md-8 col-sm-12 newslistdtlsrgt">
                <h4><%= event.event_category %></h4>
                <h2><%= event.event_name %></h2>
                <h3>
                  <span
                    ><img src="/images/calendar.png" alt="" /><%=
                    event.event_frm_date.slice(0,10) %></span
                  >
                  to
                  <span
                    ><img src="/images/calendar.png" alt="" /><%=
                    event.event_to_date.slice(4,15) %></span
                  >
                </h3>
                <!-- <span><img src="/images/news-icon.png" alt="" height="24"> Times Of India</span> -->
                <p><%= event.event_description.slice(0,90)%></p>
                <a href="/newseventListing/particular-event?id=<%= event.id %>"
                  >Read More <img src="/images/newsmore-arrow.png" alt=""
                /></a>
              </div>
            </div>
          </div>
          <% })%> <%}%>

    
        </div>
      </div>
    </section>
    <%- include('../common/footer.ejs') %>
  </body>
</html>
